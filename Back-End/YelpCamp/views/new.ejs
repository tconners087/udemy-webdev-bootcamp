<% include partials/header %>


<div class="container">
  <h1 class="text-center display-4">Create a New Campground</h1>
  <div class="row">

    <div class="post-form">
      <form action="/campgrounds" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="name" placeholder="name" id="">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="image" placeholder="image url" id="">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="description" placeholder="description" id="">
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Submit</button>
        </div>
      </form>
      <a href="/campgrounds">Go back</a>
    </div>

  </div>

</div>


