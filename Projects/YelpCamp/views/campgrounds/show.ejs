<% include ../partials/header %>

<div class="container main-container">
  <div class="row">

    <div class="col-md-3">
      <p class="lead">YelpCamp</p>
      <div class="list-group">
        <li class="list-group-item active">
          Info 1
        </li>
        <li class="list-group-item">
          Info 2
        </li>
        <li class="list-group-item">
          Info 3
        </li>
      </div>
    </div>

    <div class="col-md-9">
      <div class="card">
        <img class="card-img-top" src="<%=camp.image%>" alt="" srcset="">
        <div class="card-body">
          <h5 class="card-title show-page-card-title"><a href=""><%=camp.name%></a></h5>
          <h4 class="float-right">$9.00/night</h4>
          <p class="card-text"><%=camp.description%></p>
        </div>
        <div class="card-footer">
          <div class="text-right">
            <p>
              <a href="/campgrounds/<%=camp._id%>/comments/new" class="btn btn-success">Add New Comment</a>
            </p>
          </div>
          <hr>
          <%camp.comments.forEach(function(comment){%>
          <div class="row">
            <div class="col-md-12">
              <strong><%=comment.author%></strong>
              <span class="float-right">10 days ago</span>
              <p><%=comment.text%></p>
            </div>
          </div>
          <%});%>
        </div>
      </div>
      <a href="/campgrounds" class="btn btn-dark btn-sm my-3 float-right">Back to Campground Listings</a>
    </div>

  </div>
</div>

<% include ../partials/footer %>